datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Mailbox {
  createdAt   DateTime @default(now())
  emails      Email[]
  id          String   @id @default(cuid())
  mailboxName String?
  synced      Boolean?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Email {
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  isFlagged   Boolean?
  isRead      Boolean?
  mailbox     Mailbox?  @relation(fields: [mailboxId], references: [id])
  mailboxId   String?
  receivedAt  DateTime?
  senderEmail String?
  senderName  String?
  subject     String?
  updatedAt   DateTime  @updatedAt
}

model User {
  createdAt DateTime  @default(now())
  email     String?   @unique
  firstName String?
  id        String    @id @default(cuid())
  lastName  String?
  mailboxes Mailbox[]
  password  String
  roles     Json
  updatedAt DateTime  @updatedAt
  username  String    @unique
}
